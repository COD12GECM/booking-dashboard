<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <meta name="theme-color" content="#10b981">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <link rel="manifest" href="/manifest.json">
  <link rel="apple-touch-icon" href="/icons/icon-192x192.svg">
  <link rel="icon" type="image/png" href="https://cdn.shopify.com/s/files/1/0940/5274/5549/files/Untitled_design-100_550ad869-e845-4877-9844-37e6bd98b2a0.png?v=1766876822">
  <title>Settings - <%= owner.clinicName || 'Dashboard' %></title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    
    :root {
      --neo-bg: #e0e5ec;
      --neo-shadow-dark: #a3b1c6;
      --neo-shadow-light: #ffffff;
      --neo-primary: #10b981;
      --neo-text: #1e293b;
      --neo-text-muted: #64748b;
    }
    
    [data-theme="dark"] {
      --neo-bg: #1a1a2e;
      --neo-shadow-dark: #0f0f1a;
      --neo-shadow-light: #252542;
      --neo-text: #e2e8f0;
      --neo-text-muted: #94a3b8;
    }
    
    .theme-toggle {
      background: var(--neo-bg);
      border: none;
      padding: 10px;
      border-radius: 50%;
      cursor: pointer;
      box-shadow: 3px 3px 6px var(--neo-shadow-dark), -3px -3px 6px var(--neo-shadow-light);
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .theme-toggle svg { width: 20px; height: 20px; stroke: var(--neo-text); }
    [data-theme="dark"] .sun-icon { display: block; }
    [data-theme="dark"] .moon-icon { display: none; }
    .sun-icon { display: none; }
    .moon-icon { display: block; }
    
    body {
      min-height: 100vh;
      background: var(--neo-bg);
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }
    
    .navbar {
      background: var(--neo-bg);
      padding: 16px 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 4px 12px var(--neo-shadow-dark);
      flex-wrap: wrap;
      gap: 12px;
    }
    
    .navbar-brand {
      display: flex;
      align-items: center;
      gap: 12px;
    }
    
    .navbar-logo {
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, #10b981, #059669);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .navbar-logo svg {
      width: 22px;
      height: 22px;
      stroke: white;
    }
    
    .navbar-title {
      color: var(--neo-text);
      font-size: 18px;
      font-weight: 700;
    }
    
    .navbar-actions {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
    }
    
    .nav-link {
      color: var(--neo-text-muted);
      text-decoration: none;
      padding: 8px 16px;
      border-radius: 10px;
      font-weight: 600;
      font-size: 14px;
      transition: all 0.3s ease;
      background: var(--neo-bg);
      box-shadow: 3px 3px 6px var(--neo-shadow-dark), -3px -3px 6px var(--neo-shadow-light);
    }
    
    .nav-link:hover {
      color: var(--neo-text);
    }
    
    .nav-link.active {
      background: linear-gradient(135deg, #10b981, #059669);
      color: white;
    }
    
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 24px 16px;
    }
    
    .page-header {
      margin-bottom: 24px;
    }
    
    .page-title {
      color: var(--neo-text);
      font-size: 24px;
      font-weight: 700;
    }
    
    .tabs {
      display: flex;
      gap: 8px;
      margin-bottom: 24px;
      flex-wrap: wrap;
    }
    
    .tab {
      padding: 10px 20px;
      border: none;
      border-radius: 10px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      background: var(--neo-bg);
      color: var(--neo-text-muted);
      box-shadow: 3px 3px 6px var(--neo-shadow-dark), -3px -3px 6px var(--neo-shadow-light);
      transition: all 0.2s ease;
    }
    
    .tab:hover { color: var(--neo-text); }
    
    .tab.active {
      background: linear-gradient(135deg, #10b981, #059669);
      color: white;
      box-shadow: none;
    }
    
    .tab-content { display: none; }
    .tab-content.active { display: block; }
    
    .card {
      background: var(--neo-bg);
      border-radius: 20px;
      padding: 28px;
      margin-bottom: 20px;
      box-shadow: 10px 10px 20px var(--neo-shadow-dark), -10px -10px 20px var(--neo-shadow-light);
    }
    
    .card-title {
      color: var(--neo-text);
      font-size: 14px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-bottom: 20px;
      padding-bottom: 12px;
      border-bottom: 2px solid rgba(163, 177, 198, 0.3);
    }
    
    .form-group {
      margin-bottom: 20px;
    }
    
    .form-label {
      display: block;
      color: var(--neo-text);
      font-size: 12px;
      font-weight: 600;
      margin-bottom: 8px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    
    .form-input, .form-textarea {
      width: 100%;
      padding: 14px 18px;
      background: var(--neo-bg);
      border: none;
      border-radius: 12px;
      font-size: 15px;
      color: var(--neo-text);
      box-shadow: inset 4px 4px 8px var(--neo-shadow-dark), inset -4px -4px 8px var(--neo-shadow-light);
      transition: all 0.3s ease;
    }
    
    .form-input:focus, .form-textarea:focus {
      outline: none;
    }
    
    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 16px;
    }
    
    .form-row-3 {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 16px;
    }
    
    .form-row-4 {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 12px;
    }
    
    .form-hint {
      color: var(--neo-text-muted);
      font-size: 12px;
      margin-top: 6px;
    }
    
    .color-picker-group {
      display: flex;
      gap: 10px;
      align-items: center;
    }
    
    .color-picker {
      width: 50px;
      height: 40px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      padding: 0;
    }
    
    .checkbox-group {
      display: flex;
      flex-wrap: wrap;
      gap: 12px;
    }
    
    .checkbox-item {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 10px 16px;
      background: var(--neo-bg);
      border-radius: 10px;
      box-shadow: 3px 3px 6px var(--neo-shadow-dark), -3px -3px 6px var(--neo-shadow-light);
      cursor: pointer;
      transition: all 0.2s ease;
    }
    
    .checkbox-item:has(input:checked) {
      background: linear-gradient(135deg, #10b981, #059669);
      color: white;
      box-shadow: none;
    }
    
    .checkbox-item input {
      display: none;
    }
    
    .checkbox-item span {
      font-size: 13px;
      font-weight: 600;
    }
    
    .day-toggle {
      padding: 10px 16px;
      border: none;
      border-radius: 10px;
      font-size: 13px;
      font-weight: 600;
      cursor: pointer;
      background: var(--neo-bg);
      color: var(--neo-text);
      box-shadow: 3px 3px 6px var(--neo-shadow-dark), -3px -3px 6px var(--neo-shadow-light);
      transition: all 0.2s ease;
    }
    
    .day-toggle.active {
      background: linear-gradient(135deg, #10b981, #059669);
      color: white;
      box-shadow: inset 2px 2px 4px rgba(0,0,0,0.2);
    }
    
    .day-toggle:hover {
      transform: scale(1.02);
    }
    
    .template-section {
      background: #f8fafc;
      border-radius: 12px;
      padding: 20px;
      margin-bottom: 16px;
    }
    
    .template-title {
      font-size: 14px;
      font-weight: 700;
      color: var(--neo-text);
      margin-bottom: 16px;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .template-icon {
      width: 24px;
      height: 24px;
      border-radius: 6px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .template-icon.confirm { background: #d1fae5; color: #059669; }
    .template-icon.cancel { background: #fee2e2; color: #dc2626; }
    .template-icon.reminder { background: #dbeafe; color: #2563eb; }
    
    .logo-preview {
      width: 80px;
      height: 80px;
      border-radius: 12px;
      background: #f1f5f9;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-top: 10px;
      overflow: hidden;
    }
    
    .logo-preview img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
    }
    
    .logo-preview-placeholder {
      color: var(--neo-text-muted);
      font-size: 12px;
      text-align: center;
    }
    
    .btn {
      width: 100%;
      padding: 16px;
      border: none;
      border-radius: 14px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: #ffffff;
      box-shadow: 5px 5px 10px var(--neo-shadow-dark), -5px -5px 10px var(--neo-shadow-light);
    }
    
    .btn:hover {
      transform: translateY(-2px);
    }
    
    .success-msg {
      background: linear-gradient(135deg, #d1fae5, #a7f3d0);
      color: #065f46;
      padding: 14px 20px;
      border-radius: 12px;
      margin-bottom: 20px;
      font-size: 14px;
      font-weight: 500;
    }
    
    .email-preview {
      background: white;
      border-radius: 12px;
      padding: 20px;
      margin-top: 16px;
      border: 1px solid #e5e7eb;
    }
    
    .email-preview-header {
      padding: 20px;
      border-radius: 8px 8px 0 0;
      text-align: center;
      color: white;
    }
    
    .email-preview-body {
      padding: 20px;
    }
    
    @media (max-width: 768px) {
      .form-row, .form-row-3, .form-row-4 { grid-template-columns: 1fr; }
      .card { padding: 20px; }
      .navbar { padding: 12px 16px; }
      .tabs { gap: 6px; }
      .tab { padding: 8px 14px; font-size: 13px; }
      .checkbox-group { gap: 8px; }
      .checkbox-item { padding: 8px 12px; }
      .team-member-card { flex-direction: column; text-align: center; }
      .member-actions { justify-content: center; margin-top: 12px; }
    }
    
    .color-option {
      transition: all 0.2s;
    }
    
    input[type="radio"]:checked + .color-option {
      border-color: var(--neo-text) !important;
      transform: scale(1.1);
    }
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="navbar-brand">
      <div class="navbar-logo">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
          <line x1="16" y1="2" x2="16" y2="6"/>
          <line x1="8" y1="2" x2="8" y2="6"/>
          <line x1="3" y1="10" x2="21" y2="10"/>
        </svg>
      </div>
      <span class="navbar-title"><%= owner.clinicName || 'Dashboard' %></span>
    </div>
    <div class="navbar-actions">
      <a href="/dashboard" class="nav-link">Bookings</a>
      <a href="/dashboard/settings" class="nav-link active">Settings</a>
      <button type="button" class="theme-toggle" id="theme-toggle" title="Toggle dark mode">
        <svg class="moon-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
        <svg class="sun-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
      </button>
      <a href="/logout" class="nav-link">Logout</a>
    </div>
  </nav>
  
  <div class="container">
    <div class="page-header">
      <h1 class="page-title">Settings</h1>
    </div>
    
    <% if (success) { %>
      <div class="success-msg"><%= success %></div>
    <% } %>
    
    <div class="tabs">
      <button type="button" class="tab active" data-tab="business">Business</button>
      <button type="button" class="tab" data-tab="team">Team</button>
      <button type="button" class="tab" data-tab="schedule">Schedule</button>
      <button type="button" class="tab" data-tab="email">Email Templates</button>
    </div>
    
    <form method="POST" action="/dashboard/settings">
      <!-- BUSINESS TAB -->
      <div class="tab-content active" id="tab-business">
        <div class="card">
          <h2 class="card-title">Business Information</h2>
          
          <div class="form-group">
            <label class="form-label">Business / Clinic Name</label>
            <input type="text" name="clinicName" class="form-input" value="<%= owner.clinicName || '' %>" placeholder="Your business name">
          </div>
          
          <div class="form-row">
            <div class="form-group">
              <label class="form-label">Phone</label>
              <input type="tel" name="clinicPhone" class="form-input" value="<%= owner.clinicPhone || '' %>" placeholder="+1 234 567 890">
            </div>
            <div class="form-group">
              <label class="form-label">Website URL</label>
              <input type="url" name="websiteUrl" class="form-input" value="<%= owner.websiteUrl || '' %>" placeholder="https://...">
          </div>
        </div>
        
        <div class="form-group">
          <label class="form-label">Address</label>
          <input type="text" name="clinicAddress" class="form-input" value="<%= owner.clinicAddress || '' %>" placeholder="Your business address">
        </div>
        
        <div class="form-group">
          <label class="form-label">Services Offered</label>
          <input type="text" name="services" class="form-input" value="<%= owner.settings.services.join(', ') %>" placeholder="Consultation, Follow-up, Premium">
          <p class="form-hint">Separate services with commas</p>
        </div>
      </div>
      </div>
      
      <!-- SCHEDULE TAB -->
      <div class="tab-content" id="tab-schedule">
        <div class="card">
          <h2 class="card-title">Working Hours</h2>
          
          <div class="form-row-3">
            <div class="form-group">
              <label class="form-label">Opening Hour</label>
              <input type="number" name="startHour" class="form-input" value="<%= owner.settings.startHour %>" min="0" max="23">
            </div>
            <div class="form-group">
              <label class="form-label">Closing Hour</label>
              <input type="number" name="endHour" class="form-input" value="<%= owner.settings.endHour %>" min="0" max="23">
            </div>
            <div class="form-group">
              <label class="form-label">Slots Per Hour</label>
              <input type="number" name="slotsPerHour" class="form-input" value="<%= owner.settings.slotsPerHour %>" min="1" max="10">
            </div>
          </div>
        </div>
        
        <div class="card">
          <h2 class="card-title">Working Days</h2>
          <p class="form-hint" style="margin-bottom: 16px;">Select the days you accept bookings</p>
          
          <% 
            const workingDays = owner.settings?.workingDays || [1, 2, 3, 4, 5]; 
            const hasDay = (day) => workingDays.includes(day) || workingDays.includes(String(day));
          %>
          <input type="hidden" name="workingDaysData" id="workingDaysData" value="<%= JSON.stringify(workingDays) %>">
          <div class="checkbox-group" id="working-days-group">
            <button type="button" class="day-toggle <%= hasDay(1) ? 'active' : '' %>" data-day="1">Monday</button>
            <button type="button" class="day-toggle <%= hasDay(2) ? 'active' : '' %>" data-day="2">Tuesday</button>
            <button type="button" class="day-toggle <%= hasDay(3) ? 'active' : '' %>" data-day="3">Wednesday</button>
            <button type="button" class="day-toggle <%= hasDay(4) ? 'active' : '' %>" data-day="4">Thursday</button>
            <button type="button" class="day-toggle <%= hasDay(5) ? 'active' : '' %>" data-day="5">Friday</button>
            <button type="button" class="day-toggle <%= hasDay(6) ? 'active' : '' %>" data-day="6">Saturday</button>
            <button type="button" class="day-toggle <%= hasDay(0) ? 'active' : '' %>" data-day="0">Sunday</button>
          </div>
        </div>
      </div>
      
      <!-- EMAIL TEMPLATES TAB -->
      <div class="tab-content" id="tab-email">
        <div class="card">
          <h2 class="card-title">Email Branding</h2>
          
          <div class="form-group">
            <label class="form-label">Logo URL</label>
            <input type="url" name="logoUrl" id="logoUrl" class="form-input" value="<%= owner.emailSettings?.logoUrl || '' %>" placeholder="https://your-domain.com/logo.png">
            <p class="form-hint">Enter a URL to your logo image (recommended: 200x60px)</p>
            <div class="logo-preview" id="logoPreview">
              <% if (owner.emailSettings?.logoUrl) { %>
                <img src="<%= owner.emailSettings.logoUrl %>" alt="Logo">
              <% } else { %>
                <span class="logo-preview-placeholder">No logo</span>
              <% } %>
            </div>
          </div>
          
          <div class="form-group">
            <label class="form-label">Business Name (for emails)</label>
            <input type="text" name="emailBusinessName" class="form-input" value="<%= owner.emailSettings?.businessName || owner.clinicName || '' %>" placeholder="Your Business Name">
          </div>
          
          <div class="form-row">
            <div class="form-group">
              <label class="form-label">Primary Color</label>
              <div class="color-picker-group">
                <input type="color" name="primaryColor" class="color-picker" value="<%= owner.emailSettings?.primaryColor || '#10b981' %>">
                <input type="text" class="form-input" id="primaryColorText" value="<%= owner.emailSettings?.primaryColor || '#10b981' %>" readonly style="flex: 1;">
              </div>
            </div>
            <div class="form-group">
              <label class="form-label">Secondary Color</label>
              <div class="color-picker-group">
                <input type="color" name="secondaryColor" class="color-picker" value="<%= owner.emailSettings?.secondaryColor || '#059669' %>">
                <input type="text" class="form-input" id="secondaryColorText" value="<%= owner.emailSettings?.secondaryColor || '#059669' %>" readonly style="flex: 1;">
              </div>
            </div>
          </div>
          
          <div class="form-row">
            <div class="form-group">
              <label class="form-label">Background Color</label>
              <div class="color-picker-group">
                <input type="color" name="backgroundColor" class="color-picker" value="<%= owner.emailSettings?.backgroundColor || '#ffffff' %>">
                <input type="text" class="form-input" value="<%= owner.emailSettings?.backgroundColor || '#ffffff' %>" readonly style="flex: 1;">
              </div>
            </div>
            <div class="form-group">
              <label class="form-label">Text Color</label>
              <div class="color-picker-group">
                <input type="color" name="textColor" class="color-picker" value="<%= owner.emailSettings?.textColor || '#374151' %>">
                <input type="text" class="form-input" value="<%= owner.emailSettings?.textColor || '#374151' %>" readonly style="flex: 1;">
              </div>
            </div>
          </div>
        </div>
        
        <div class="card">
          <h2 class="card-title">Email Templates</h2>
          
          <!-- Confirmation Template -->
          <div class="template-section">
            <div class="template-title">
              <span class="template-icon confirm" style="background: #10b981; color: white; width: 24px; height: 24px; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; font-size: 14px; font-weight: bold;">C</span>
              Confirmation Email
            </div>
            <div class="form-group">
              <label class="form-label">Subject</label>
              <input type="text" name="confirmationSubject" class="form-input" value="<%= owner.emailSettings?.confirmationSubject || 'Booking Confirmed' %>">
            </div>
            <div class="form-group">
              <label class="form-label">Message</label>
              <textarea name="confirmationMessage" class="form-input" rows="3"><%= owner.emailSettings?.confirmationMessage || 'Your appointment has been confirmed. Here are the details:' %></textarea>
            </div>
          </div>
          
          <!-- Cancellation Template -->
          <div class="template-section">
            <div class="template-title">
              <span class="template-icon cancel" style="background: #ef4444; color: white; width: 24px; height: 24px; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; font-size: 14px; font-weight: bold;">X</span>
              Cancellation Email
            </div>
            <div class="form-group">
              <label class="form-label">Subject</label>
              <input type="text" name="cancellationSubject" class="form-input" value="<%= owner.emailSettings?.cancellationSubject || 'Booking Cancelled' %>">
            </div>
            <div class="form-group">
              <label class="form-label">Message</label>
              <textarea name="cancellationMessage" class="form-input" rows="3"><%= owner.emailSettings?.cancellationMessage || 'Your appointment has been cancelled.' %></textarea>
            </div>
          </div>
          
          <!-- Reminder Template -->
          <div class="template-section">
            <div class="template-title">
              <span class="template-icon reminder" style="background: #8b5cf6; color: white; width: 24px; height: 24px; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; font-size: 14px; font-weight: bold;">R</span>
              Reminder Email
            </div>
            <div class="form-group">
              <label class="form-label">Subject</label>
              <input type="text" name="reminderSubject" class="form-input" value="<%= owner.emailSettings?.reminderSubject || 'Appointment Reminder' %>">
            </div>
            <div class="form-group">
              <label class="form-label">Message</label>
              <textarea name="reminderMessage" class="form-input" rows="3"><%= owner.emailSettings?.reminderMessage || 'This is a reminder for your upcoming appointment.' %></textarea>
            </div>
          </div>
          
          <div class="form-group">
            <label class="form-label">Email Footer (all emails)</label>
            <textarea name="emailFooter" class="form-input" rows="2" placeholder="Thank you for choosing us!"><%= owner.emailSettings?.emailFooter || '' %></textarea>
          </div>
        </div>
      </div>
      
      <button type="submit" class="btn">Save All Settings</button>
    </form>
    
    <!-- TEAM TAB (outside main form to allow nested forms) -->
    <div class="tab-content" id="tab-team">
      <div class="card">
        <h2 class="card-title">Team Members</h2>
        <p class="form-hint" style="margin-bottom: 20px;">Add your team members (doctors, specialists, etc.) to assign bookings to specific people.</p>
        
        <% const teamMembers = owner.teamMembers || []; %>
        
        <% if (teamMembers.length > 0) { %>
          <div class="team-list" style="margin-bottom: 24px;">
            <% teamMembers.forEach(member => { %>
              <div class="team-member-card" style="display: flex; align-items: center; gap: 16px; padding: 16px; background: var(--neo-bg); border-radius: 12px; margin-bottom: 12px; box-shadow: 3px 3px 6px var(--neo-shadow-dark), -3px -3px 6px var(--neo-shadow-light); flex-wrap: wrap;">
                <div style="width: 48px; height: 48px; border-radius: 50%; background: <%= member.color || '#10b981' %>; display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 18px;">
                  <%= member.name.charAt(0).toUpperCase() %>
                </div>
                <div style="flex: 1; min-width: 150px;">
                  <div style="font-weight: 600; color: var(--neo-text);"><%= member.name %></div>
                  <div style="font-size: 13px; color: var(--neo-text-muted);"><%= member.role || 'Specialist' %></div>
                </div>
                <div style="display: flex; gap: 8px; flex-wrap: wrap;">
                  <span style="padding: 4px 10px; border-radius: 20px; font-size: 11px; font-weight: 600; background: <%= member.isActive !== false ? '#d1fae5' : '#fee2e2' %>; color: <%= member.isActive !== false ? '#059669' : '#dc2626' %>;">
                    <%= member.isActive !== false ? 'Active' : 'Inactive' %>
                  </span>
                  <form method="POST" action="/dashboard/team/delete/<%= member._id %>" style="display: inline;" onsubmit="return confirm('Remove this team member?')">
                    <button type="submit" style="padding: 6px 12px; border: none; border-radius: 8px; background: #fee2e2; color: #dc2626; cursor: pointer; font-size: 12px;">Remove</button>
                  </form>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div style="text-align: center; padding: 40px; color: var(--neo-text-muted);">
            <p style="margin-bottom: 8px;">No team members yet</p>
            <p style="font-size: 13px;">Add team members below to assign bookings to specific people</p>
          </div>
        <% } %>
      </div>
      
      <form method="POST" action="/dashboard/team/add" class="card" style="margin-top: 16px;">
        <h3 class="card-title">Add New Team Member</h3>
        <div class="form-row">
          <div class="form-group">
            <label class="form-label">Name *</label>
            <input type="text" name="name" class="form-input" placeholder="Dr. John Smith" required>
          </div>
          <div class="form-group">
            <label class="form-label">Role</label>
            <input type="text" name="role" class="form-input" placeholder="Specialist, Doctor, etc.">
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <label class="form-label">Email</label>
            <input type="email" name="email" class="form-input" placeholder="john@clinic.com">
          </div>
          <div class="form-group">
            <label class="form-label">Phone</label>
            <input type="tel" name="phone" class="form-input" placeholder="+40 123 456 789">
          </div>
        </div>
        <div class="form-group">
          <label class="form-label">Color (for calendar)</label>
          <div style="display: flex; gap: 8px; flex-wrap: wrap;">
            <label style="cursor: pointer;"><input type="radio" name="color" value="#10b981" checked style="display: none;"><span class="color-option" style="display: block; width: 36px; height: 36px; border-radius: 50%; background: #10b981; border: 3px solid transparent;"></span></label>
            <label style="cursor: pointer;"><input type="radio" name="color" value="#3b82f6" style="display: none;"><span class="color-option" style="display: block; width: 36px; height: 36px; border-radius: 50%; background: #3b82f6; border: 3px solid transparent;"></span></label>
            <label style="cursor: pointer;"><input type="radio" name="color" value="#8b5cf6" style="display: none;"><span class="color-option" style="display: block; width: 36px; height: 36px; border-radius: 50%; background: #8b5cf6; border: 3px solid transparent;"></span></label>
            <label style="cursor: pointer;"><input type="radio" name="color" value="#ec4899" style="display: none;"><span class="color-option" style="display: block; width: 36px; height: 36px; border-radius: 50%; background: #ec4899; border: 3px solid transparent;"></span></label>
            <label style="cursor: pointer;"><input type="radio" name="color" value="#f59e0b" style="display: none;"><span class="color-option" style="display: block; width: 36px; height: 36px; border-radius: 50%; background: #f59e0b; border: 3px solid transparent;"></span></label>
            <label style="cursor: pointer;"><input type="radio" name="color" value="#ef4444" style="display: none;"><span class="color-option" style="display: block; width: 36px; height: 36px; border-radius: 50%; background: #ef4444; border: 3px solid transparent;"></span></label>
          </div>
        </div>
        <button type="submit" class="btn" style="margin-top: 16px;">+ Add Team Member</button>
      </form>
    </div>
  </div>
  
  <script>
    // Tab switching
    document.querySelectorAll('.tab').forEach(tab => {
      tab.addEventListener('click', () => {
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
        tab.classList.add('active');
        document.getElementById('tab-' + tab.dataset.tab).classList.add('active');
      });
    });
    
    // Sync color pickers with text inputs
    document.querySelectorAll('.color-picker').forEach(picker => {
      picker.addEventListener('input', (e) => {
        const textInput = e.target.parentElement.querySelector('input[type="text"]');
        if (textInput) textInput.value = e.target.value;
      });
    });
    
    // Logo preview
    document.getElementById('logoUrl').addEventListener('input', (e) => {
      const preview = document.getElementById('logoPreview');
      if (e.target.value) {
        preview.innerHTML = '<img src="' + e.target.value + '" alt="Logo" onerror="this.parentElement.innerHTML=\'<span class=logo-preview-placeholder>Invalid URL</span>\'">';
      } else {
        preview.innerHTML = '<span class="logo-preview-placeholder">No logo</span>';
      }
    });
    
    // Working days toggle buttons
    const dayToggles = document.querySelectorAll('.day-toggle');
    const workingDaysInput = document.getElementById('workingDaysData');
    
    function updateWorkingDays() {
      const selectedDays = [];
      dayToggles.forEach(btn => {
        if (btn.classList.contains('active')) {
          selectedDays.push(parseInt(btn.dataset.day));
        }
      });
      workingDaysInput.value = JSON.stringify(selectedDays);
    }
    
    dayToggles.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        btn.classList.toggle('active');
        updateWorkingDays();
      });
    });
    
    // Dark Mode Toggle
    const themeToggle = document.getElementById('theme-toggle');
    const savedTheme = localStorage.getItem('theme') || 'light';
    document.documentElement.setAttribute('data-theme', savedTheme);
    
    themeToggle.addEventListener('click', () => {
      const currentTheme = document.documentElement.getAttribute('data-theme');
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      document.documentElement.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
    });
  </script>
</body>
</html>
